@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice Details</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f8fafc;
            min-height: 100vh;
        }

        .container {
            display: flex;
        }

        .sidebar {
            width: 80px;
            background-color: #1e293b;
            position: fixed;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .logo {
            height: 80px;
            background-color: #8b5cf6;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .logo-circle {
            width: 40px;
            height: 40px;
            background-color: white;
            border-radius: 50%;
        }

        .sidebar-bottom {
            margin-top: auto;
            padding: 24px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 24px;
            border-top: 1px solid #334155;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            background-color: #d1d5db;
            border-radius: 50%;
        }

        .main-content {
            flex: 1;
            margin-left: 80px;
            padding: 32px;
            max-width: 1000px;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            color: #6366f1;
            text-decoration: none;
            margin-bottom: 32px;
        }

        .status-bar {
            background-color: white;
            padding: 24px;
            border-radius: 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
        }

        .status-section {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .status-label {
            color: #64748b;
        }

        .status-pending {
            background-color: #fff7ed;
            color: #f97316;
            padding: 8px 16px;
            border-radius: 6px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            background-color: #f97316;
            border-radius: 50%;
        }

        .button-group {
            display: flex;
            gap: 8px;
        }

        .btn {
            padding: 12px 24px;
            border-radius: 24px;
            border: none;
            cursor: pointer;
            font-weight: 500;
        }

        .btn-edit {
            background-color: #f1f5f9;
            color: #64748b;
        }

        .btn-delete {
            background-color: #ef4444;
            color: white;
        }

        .btn-paid {
            background-color: #8b5cf6;
            color: white;
        }

        .invoice-details {
            background-color: white;
            padding: 48px;
            border-radius: 8px;
        }

        .invoice-header {
            margin-bottom: 48px;
        }

        .invoice-id {
            font-size: 16px;
            color: #1e293b;
            margin-bottom: 8px;
        }

        .invoice-id span {
            color: #94a3b8;
        }

        .project-name {
            color: #64748b;
        }

        .address {
            color: #64748b;
            font-style: normal;
            line-height: 1.5;
        }

        .dates-section {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 40px;
            margin: 48px 0;
        }

        .date-group {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .date-label {
            color: #64748b;
        }

        .date-value {
            color: #1e293b;
            font-size: 15px;
            font-weight: 500;
        }

        .bill-details {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 40px;
            margin-bottom: 48px;
        }

        .bill-group h3 {
            color: #64748b;
            font-size: 12px;
            margin-bottom: 8px;
        }

        .client-name {
            color: #1e293b;
            font-weight: 500;
            margin-bottom: 8px;
        }

        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 24px;
        }

        .items-table th {
            background-color: #f8fafc;
            padding: 12px;
            text-align: left;
            color: #64748b;
            font-weight: 500;
        }

        .items-table td {
            padding: 12px;
            border-bottom: 1px solid #e2e8f0;
        }

        .amount-due {
            background-color: #1e293b;
            color: white;
            padding: 32px;
            border-radius: 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .amount-label {
            font-size: 13px;
        }

        .amount-value {
            font-size: 24px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <div class="logo">
                <div class="logo-circle"></div>
            </div>
            <div class="sidebar-bottom">
                <svg width="24" height="24" fill="#94a3b8" viewBox="0 0 24 24">
                    <path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Z" />
                </svg>
                <div class="user-avatar"></div>
            </div>
        </aside>

        <main class="main-content">
            <a href="#" class="back-link">← Go back</a>

            <div class="status-bar">
                <div class="status-section">
                    <span class="status-label">Status</span>
                    <span class="status-pending">
                        <span class="status-dot"></span>
                        Pending
                    </span>
                </div>
                <div class="button-group">
                    <button class="btn btn-edit">Edit</button>
                    <button class="btn btn-delete">Delete</button>
                    <button class="btn btn-paid">Mark as Paid</button>
                </div>
            </div>

            <div class="invoice-details">
                <div class="invoice-header">
                    <p class="invoice-id"><span>#</span>XM9141</p>
                    <p class="project-name">Graphic Design</p>
                </div>

                <address class="address">
                    19 Union Terrace<br>
                    London<br>
                    E1 3EZ<br>
                    United Kingdom
                </address>

                <div class="dates-section">
                    <div class="date-group">
                        <span class="date-label">Invoice Date</span>
                        <span class="date-value">21 Aug 2021</span>
                    </div>
                    <div class="date-group">
                        <span class="date-label">Payment Due</span>
                        <span class="date-value">20 Sep 2021</span>
                    </div>
                </div>

                <div class="bill-details">
                    <div class="bill-group">
                        <h3>Bill To</h3>
                        <p class="client-name">Alex Grim</p>
                        <address class="address">
                            84 Church Way<br>
                            Bradford<br>
                            BD1 9PB<br>
                            United Kingdom
                        </address>
                    </div>
                    <div class="bill-group">
                        <h3>Sent to</h3>
                        <p class="client-name">alexgrim@mail.com</p>
                    </div>
                </div>

                <table class="items-table">
                    <thead>
                        <tr>
                            <th>Item Name</th>
                            <th>QTY.</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Banner Design</td>
                            <td>1</td>
                            <td>£ 156.00</td>
                            <td>£ 156.00</td>
                        </tr>
                        <tr>
                            <td>Email Design</td>
                            <td>2</td>
                            <td>£ 200.00</td>
                            <td>£ 400.00</td>
                        </tr>
                    </tbody>
                </table>

                <div class="amount-due">
                    <span class="amount-label">Amount Due</span>
                    <span class="amount-value">£ 556.00</span>
                </div>
            </div>
        </main>
    </div>
</body>
</html>